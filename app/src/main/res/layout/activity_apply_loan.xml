                        android:layout_marginBottom="@dimen/mp_10"
                        android:text="Permanent Address"
                        android:textColor="@color/green"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:layout_constraintBottom_toBottomOf="parent"
