                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:padding="2dp"
                            android:src="@drawable/nidbackside" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nomineeParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:layout_marginTop="@dimen/mp_20"
                android:orientation="vertical"
                android:padding="@dimen/mp_10">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/nomineeInfoTv"
                        android:text="@string/secondary_contact_person_s_information"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_marginStart="@dimen/mp_10"
