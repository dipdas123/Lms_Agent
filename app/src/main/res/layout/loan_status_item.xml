<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginStart="@dimen/mp_5"
    android:layout_marginEnd="@dimen/mp_5"
    android:background="@color/colorGray"
    android:layout_marginTop="@dimen/mp_5"
    android:layout_marginBottom="@dimen/mp_5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/mp_5"
        android:layout_marginBottom="@dimen/mp_5"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/loan_date"
            android:text="12/12/2009"
            android:layout_marginStart="@dimen/mp_5"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/mp_5"
            android:layout_marginBottom="@dimen/mp_5"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="1dp"
            android:layout_alignParentEnd="true"
            android:layout_height="@dimen/mp_max"
            android:background="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/mp_5"
        android:layout_marginBottom="@dimen/mp_5"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/loanDurationMonth"
            android:text="6"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="1dp"
            android:layout_alignParentEnd="true"
            android:layout_height="@dimen/mp_max"
            android:background="#FFFFFF" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/mp_5"
        android:layout_marginBottom="@dimen/mp_5"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/loanDueAmount"
            android:text="155"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/mp_5"
            android:layout_marginBottom="@dimen/mp_5"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="1dp"
            android:layout_alignParentEnd="true"
            android:layout_height="@dimen/mp_max"
            android:background="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/mp_5"
        android:layout_marginBottom="@dimen/mp_5"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/statusLoanAmount"
            android:text="155"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/mp_5"
            android:layout_marginBottom="@dimen/mp_5"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="1dp"
            android:layout_alignParentEnd="true"
            android:layout_height="@dimen/mp_max"
            android:background="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/mp_5"
        android:layout_marginBottom="@dimen/mp_5"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/loanEmi"
        android:text="4334"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/mp_5"
        android:layout_marginBottom="@dimen/mp_5"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <View
            android:layout_width="1dp"
            android:layout_alignParentEnd="true"
            android:layout_height="@dimen/mp_max"
            android:background="#FFFFFF" />
    </RelativeLayout>
</LinearLayout>