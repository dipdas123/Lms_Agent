<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegistrationSuccessActivity">
<ImageView
    android:src="@mipmap/ic_launcher"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/mp_max"
    android:layout_width="200dp"
    android:layout_height="200dp"/>

    <TextView
        android:layout_marginTop="@dimen/mp_max"
        android:layout_gravity="center_horizontal"
        android:text="Congratulations"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="18sp"
        android:layout_marginTop="@dimen/mp_20"
        android:layout_gravity="center_horizontal"
        android:text="You have been Registered to LMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="registerSuccessClick"
        android:text="CONTINUE"
        android:layout_marginTop="@dimen/mp_max"
        android:layout_marginStart="@dimen/mp_max"
        android:layout_marginEnd="@dimen/mp_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>