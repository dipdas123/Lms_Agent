<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_totalitem"
    android:layout_marginTop="@dimen/mp_5"
    android:layout_marginBottom="@dimen/mp_5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:fadingEdgeLength="@dimen/mp_5"
    android:fadingEdge="horizontal"
    android:elevation="@dimen/mp_5"
    android:requiresFadingEdge="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="@dimen/mp_5"

        >
        <TextView
            android:id="@+id/loan_date"
            android:textColor="@color/colorcommontext"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingStart="@dimen/mp_5"
            android:paddingEnd="@dimen/mp_5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="SmallSp" />
        <TextView
            android:id="@+id/tv0"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_weight="0"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
            />
        <TextView
            android:id="@+id/loanDevice"
            android:textColor="@color/colorcommontext"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingStart="@dimen/mp_5"
            android:paddingEnd="@dimen/mp_5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv1"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_weight="0"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
            />
        <TextView
            android:id="@+id/loanID"
            android:textColor="@color/colorcommontext"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingStart="@dimen/mp_5"
            android:paddingEnd="@dimen/mp_5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv2"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_weight="0"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
            />
        <TextView
            android:id="@+id/downPayment"
            android:textColor="@color/colorcommontext"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingStart="@dimen/mp_5"
            android:paddingEnd="@dimen/mp_5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>